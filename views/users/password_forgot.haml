#home.col-md-6.col-md-offset-3
  .home_logo
    %a{href: '/'}
      %img{ :src => "/img/logo.svg"}
  .forgot_box
    %form.form-horizontal{action: '/users/forgot', method: 'post'}
      %h3.subtitle
        %span=I18n.t('user.forgot_password')
      %fieldset
        .form-group
          %input{type: 'hidden', name: '_method', value: 'PUT'}
          %label.user-label=I18n.t('user.email')
          %input.form-control.user-field{type: 'email', name: 'email', required: true, placeholder: I18n.t('user.email')}
        .form-group
          %input.btn{type: 'submit', value: I18n.t('user.send')}