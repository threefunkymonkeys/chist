<!DOCTYPE html>
%html{ :lang => :en }
  %head
    = partial 'shared/_basic_meta'
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    - if defined?(is_public) && !is_public
      %meta{ :name => "robots", :content => "noindex, nofollow"}
      %meta{ :name => "referrer", :content => "never"}
    %link{ :rel => "shortcut icon", :type => "image/png", :href => "/img/favicon.png" }
    %link{ :href => "/css/bootstrap.css", :rel => "stylesheet" }
    %link{ :href => "/css/chosen.min.css", :rel => "stylesheet" }
    %link{ :href => "/css/chosen_select_extend.css", :rel => "stylesheet" }
    %link{ :href => "/css/layout.css", :rel => "stylesheet" }
    %link{ :href => "/css/chist.css", :rel => "stylesheet" }
    /%link{ :href => "/css/base.css", :rel => "stylesheet" }
    /%link{ :href => "/css/bootstrap_override.css", :rel => "stylesheet" }
    %link{ :href => '//fonts.googleapis.com/css?family=Oxygen+Mono', :rel => 'stylesheet', :type => 'text/css' }
  %body
    #wrap
      = partial 'shared/_header'
      #container.container.col-md-8.col-md-offset-2
        .flash-messages
          =show_flash_message
        = yield
      = partial 'shared/_footer'

    %script{ :src => "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js", :type => "text/javascript" }
    %script{ :src => "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" }
